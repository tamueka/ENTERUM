<div class="container">
    <form id="message-form">
<h3 class="title ff-serif font-weight-normal text-black card-heading mt-0 mb-1">Post your comment: <i class="fab fa-usps"></i></h3>
        <div class="form-group">
                <input name="email" type="email" class="form-control message-input" id="email" placeholder="Email"
                    required>
                <input name="id_article" type="hidden" class="message-input" id="id_article">
            </div>
            <div class="form-group">
                <input name="name" type="text" class="form-control message-input" id="name" placeholder="Name" required>
            </div>
        <div class="form-group">
            <textarea id="message" name="message" maxlength="200" class="form-control message-input" placeholder="Message"
                required></textarea>
        </div>
        <div class="form-group">
            <button id="btn-message" type="submit" class="btn btn-outline-info btn-pub">Send</button>
            <div id="notice"></div>
        </div>
    </form>
</div>